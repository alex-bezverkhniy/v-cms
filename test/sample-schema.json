{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Welcome1",    
    "definitions": {
        "Post": {
            "type": "object",
            "title": "Posts",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string",
                    "$comment": "[unique]"
                },
                "body": {
                    "type": "string"
                },
                "top_image": {
                    "$ref": "#/definitions/Image",
                    "$comment": "[skip]"
                }
            },
            "required": [
                "author",
                "body",
                "created_at",
                "id",
                "is_blocked",
                "title",
                "updated_at"
            ]            
        },
        "Image": {
            "type": "object",
            "title": "Images",
            "additionalProperties": false,
            "properties": {
                "url": {
                    "type": "string"
                },
                "width": {
                    "type": "integer"
                },
                "height": {
                    "type": "integer"
                },
                "title": {
                    "type": "string",
                    "$comment": "[unique]"
                }
            },
            "required": ["url", "title"]            
        }
    }
}
