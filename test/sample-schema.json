{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$ref": "#/definitions/Welcome1",    
    "definitions": {
        "Post": {
            "type": "object",
            "title": "Posts",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer",
                    "$comment": "[primary; sql: serial]"
                },
                "title": {
                    "type": "string"
                },
                "body": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "$comment": "[sql_type: 'DATETIME']"

                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time",
                    "$comment": "[sql_type: 'DATETIME']"                    
                },
                "is_blocked": {
                    "type": "boolean"
                },
                "author": {
                    "$ref": "#/definitions/Author"
                }
            },
            "required": [
                "author",
                "body",
                "created_at",
                "id",
                "is_blocked",
                "title",
                "updated_at"
            ]            
        },
        "Author": {
            "type": "object",
            "title": "Authors",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "integer",
                    "$comment": "[primary; sql: serial]"
                },
                "full_name": {
                    "type": "string"
                },
                "username": {
                    "type": "string",
                    "$comment": "[unique]"
                },
                "password": {
                    "type": "string"
                },
                "salt": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "avatar": {
                    "type": "string"
                },
                "created_at": {
                    "type": "string",
                    "format": "date-time",
                    "$comment": "[sql_type: 'DATETIME']"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time",
                    "$comment": "[sql_type: 'DATETIME']"
                },
                "is_registered": {
                    "type": "boolean"
                },
                "is_blocked": {
                    "type": "boolean"
                },
                "is_admin": {
                    "type": "boolean"
                }
            },
            "required": [
                "avatar",
                "created_at",
                "email",
                "full_name",
                "id",
                "is_admin",
                "is_blocked",
                "is_registered",
                "password",
                "salt",
                "updated_at",
                "username"
            ]            
        }
    }
}
